@{
    ViewData["Title"] = "Restablecer Contraseña";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card login-container">
                <div class="card-header login-header text-center">
                    <h3>Recuperar Contraseña</h3>
                </div>
                <div class="card-body">
                    <form asp-action="RecuperarPassword" method="post">
                        <div class="form-group mb-3">
                            <label>Correo Electrónico</label>
                            <input name="email" type="email" class="form-control" required value="@ViewData["Email"]" />
                        </div>

                        <div class="form-group mb-3">
                            <label>Palabra Clave de Recuperación</label>
                            <input name="palabraClave" type="text" class="form-control" required value="@ViewData["PalabraClave"]" />
                            <small class="form-text text-muted">Ingresa la palabra clave que proporcionaste durante el registro.</small>
                        </div>

                        <div class="form-group mb-3">
                            <label>Nueva Contraseña</label>
                            <input name="newPassword" type="password" class="form-control" required
                                   pattern="^(?=.*[A-Z])(?=.*[\W]).{8,}$"
                                   title="Debe comenzar con mayúscula, contener al menos un carácter especial y tener al menos 8 caracteres" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn login-btn">
                                Actualizar Contraseña
                            </button>
                        </div>

                        @if (ViewData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger mt-3">
                                @ViewData["ErrorMessage"]
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
