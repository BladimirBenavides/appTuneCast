@{
    ViewData["Title"] = "Registrar Usuario";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card login-container">
                <div class="card-header login-header text-center">
                    <h3><i class="fas fa-user-plus"></i> Registrar Usuario</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
           
                        <div class="form-group mb-3">
                            <label class="form-label">Nombre de Usuario</label>
                            <input name="nombre" type="text" class="form-control" required placeholder="Ingrese su nombre" />
                        </div>
                        
                        <div class="form-group mb-3">
                            <label class="form-label">Correo Electrónico</label>
                            <input name="email" type="email" class="form-control" required placeholder="Ingrese su correo" />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Contraseña</label>
                            <input name="contraseña" type="password" class="form-control" required
                                   placeholder="Ingrese su contraseña"
                                   pattern="^(?=.*[A-Z])(?=.*[\W]).{8,}$"
                                   title="Debe comenzar con mayúscula, contener al menos un carácter especial y tener al menos 8 caracteres" />
                            <small class="form-text text-muted">
                                <strong>Requisitos:</strong><br>
                                • Primera letra en mayúscula<br>
                                • Al menos un carácter especial (!@@#$%^&amp;*)<br>
                                • Al menos 8 caracteres<br>
                                • Ejemplo válido: <em>Contraseña1!</em>
                            </small>
                        </div>
                      
                        <div class="form-group mb-3">
                            <label class="form-label">Confirmar Contraseña</label>
                            <input name="confirmPassword" type="password" class="form-control" required
                                   placeholder="Repita su contraseña"
                                   title="Ambas contraseñas deben coincidir" />
                        </div>
                      
                        <div class="form-group mb-3">
                            <label class="form-label">Palabra Clave de Recuperación</label>
                            <input name="palabraClaveRecuperacion" type="text" class="form-control" required
                                   placeholder="Ejemplo: Bladi03" />
                            <small class="form-text text-muted">Guarde esta palabra clave en un lugar seguro.</small>
                        </div>
                       
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn login-btn">
                                <i class="fas fa-user-plus"></i> Registrar
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <p>¿Ya tienes cuenta? <a href="@Url.Action("Login", "Account")" class="login-link">Inicia sesión aquí</a></p>
                    </div>

                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger mt-3">
                            @ViewData["ErrorMessage"]
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
