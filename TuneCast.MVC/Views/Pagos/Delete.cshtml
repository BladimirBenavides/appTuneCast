@model TuneCastModelo.Pago

@{
    ViewData["Title"] = "Eliminar Pago";
}

<div class="container py-4">
    <h1 class="mb-4">Eliminar Pago</h1>

    <div class="alert alert-warning">
        <h4 class="alert-heading">¿Estás seguro que deseas eliminar este pago?</h4>
        <p class="mb-0">Esta acción no se puede deshacer.</p>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

                <dt class="col-sm-3">Fecha:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaPago)</dd>

                <dt class="col-sm-3">Monto:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Monto)</dd>

                <dt class="col-sm-3">Método:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MetodoPago)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Eliminar">
        <input type="submit" value="Confirmar Eliminación" class="btn btn-danger me-2" />
        <a asp-action="Index" class="btn tunecast-primary text-white">
            <i class="fas fa-arrow-left me-2"></i>Cancelar
        </a>
    </form>
</div>