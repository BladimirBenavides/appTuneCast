@model TuneCastModelo.Pago

@{
    ViewData["Title"] = "Editar Pago";
}

<div class="container py-4">
    <h1 class="mb-4">Editar Pago</h1>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Editar">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="FechaPago" class="form-label"></label>
                    <input asp-for="FechaPago" class="form-control" />
                    <span asp-validation-for="FechaPago" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Monto" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="Monto" class="form-control" />
                    </div>
                    <span asp-validation-for="Monto" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MetodoPago" class="form-label"></label>
                    <input asp-for="MetodoPago" class="form-control" />
                    <span asp-validation-for="MetodoPago" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UsuarioId" class="form-label"></label>
                    <input asp-for="UsuarioId" class="form-control" />
                    <span asp-validation-for="UsuarioId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SuscripcionId" class="form-label"></label>
                    <input asp-for="SuscripcionId" class="form-control" />
                    <span asp-validation-for="SuscripcionId" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <a asp-action="Index" class="btn tunecast-secondary me-md-2">
                        <i class="fas fa-arrow-left me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn tunecast-primary text-white">
                        <i class="fas fa-save me-2"></i>Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}